<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

  >
    <LinearLayout
        android:id="@+id/closing_balance1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/salary_btn"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="5dp"

        >
        <TextView
            android:id="@+id/closing_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apr Closing Balance"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:drawableLeft="@drawable/ic_closing_balance"
            android:drawablePadding="18dp"
            android:layout_margin="16dp"

            />
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_right_chevron"
            android:drawablePadding="16dp"
            android:layout_margin="16dp"
            android:textColor="#212121"

            />

    </LinearLayout>


</LinearLayout>